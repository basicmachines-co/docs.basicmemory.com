---
import { navConfig } from '@/config/navigation'

const currentPath = Astro.url.pathname
---

<aside class="hidden md:block w-64 flex-shrink-0 border-r bg-background">
  <nav class="sticky top-16 h-[calc(100vh-4rem)] overflow-y-auto py-6 pr-6 pl-8">
    <div class="space-y-6">
      {navConfig.sidebar.map((section) => (
        <div class="space-y-3">
          <h4 class="text-sm font-semibold leading-none tracking-tight">
            {section.title}
          </h4>
          <ul class="space-y-1">
            {section.items.map((item) => (
              <li>
                <a
                  href={item.href}
                  class={`block rounded-md px-3 py-2 text-sm transition-colors hover:bg-accent hover:text-accent-foreground ${
                    currentPath === item.href
                      ? 'bg-accent text-accent-foreground font-medium'
                      : 'text-muted-foreground'
                  }`}
                >
                  {item.title}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </nav>
</aside>